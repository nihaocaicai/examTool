.setting-container {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 85%;
  max-width: 800rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  box-sizing: bordre-box;
  transform: translate(-50%, -50%);
  overflow: hidden;
  background: #fff;
  z-index: 9000;
}

.wx-setting-title {
  width: 100%;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  text-align: center;
  font-size: 40rpx;
  border-bottom: 1rpx solid black;
}

.wx-setting-con {
  margin: 25rpx 10rpx;
  padding: 10rpx;
}

.setting-content-container {
  flex-direction: row;
  display: flex;
  margin-bottom: 15rpx;
  border-bottom-width: 1rpx;
  border-bottom-color: black;
  border-bottom-style: dashed;
  height: 65rpx;
  align-items: center;
}

.setting-content-container input {
  font-size: 34rpx;
}

.setting-content-container picker {
  width: 100%;
  font-size: 34rpx;
}

.setting-content-container text {
  font-size: 34rpx;
}

/*座右铭*/

.motto {
  height: 100%;
  flex-direction: row;
  align-items: center;
}

.mottoedit {
  flex-direction: column;
  align-items: center;
  font-size: 34rpx;
  margin-bottom: 15rpx;
}

.wx-motto-con {
  height: 50rpx;
  width: 96%;
  font-size: 30rpx;
  border-width: 1rpx;
  border-color: black;
  border-style: dashed;
  padding: 10rpx;
}

/* 按钮 */

.wx-setting-btn {
  display: flex;
  justify-content: space-around;
  margin-bottom: 25rpx;
}

.wx-setting-btn button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 30%;
  height: 88rpx;
  border: 1rpx solid #ccc;
  border-radius: 88rpx;
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 8000;
  opacity: 0.7;
}
