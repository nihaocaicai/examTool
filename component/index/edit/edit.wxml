<view hidden="{{flag}}">
  <view class='plan-container'>
    <!-- 标题 -->
    <view class="wx-plan-title">每日计划添加</view>
    <form bindsubmit="formSubmit">
      <!-- 内容 -->
      <view class="wx-plan-con">
        <!-- 计划内容 -->
        <view class="plan-content-container">
          <text>计划内容：</text>
          <input name="plan_content" class='plan-content' placeholder="计划内容" />
        </view>
        <!-- 开始时间 -->
        <!-- 开始日期选择 -->
        <view>
          <picker name='stardate' mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindStarDateChange">
            <view>
              开始日期: {{stardate}}
            </view>
          </picker>
        </view>
        <!-- 开始当天时间选择 -->
        <view>
          <picker name='startime' mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindStarTimeChange">
            <view class="picker">
              开始时间: {{startime}}
            </view>
          </picker>
        </view>
        <!-- 结束时间 -->
        <view>
          <picker name='enddate' mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindEndDateChange">
            <view>
              结束日期: {{enddate}}
            </view>
          </picker>
        </view>
        <!-- 结束当天时间选择 -->
        <view>
          <picker name='endtime' mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindEndTimeChange">
            <view>
              结束时间: {{endtime}}
            </view>
          </picker>
        </view>
        <!-- 是否每日重复 -->
        <view class="plan-switch-container">
          <text>每日重复：</text>
          <switch name='plan_if_repeat' class='plan-switch' bindchange="switch1Change" />
        </view>
        <!-- 是否开启微信提示 -->
        <view class="plan-switch-container">
          <text>微信提示：</text>
          <switch name='plan_if_prompt' class='plan-switch' bindchange="switch2Change" />
        </view>
      </view>
      <!-- 按钮 -->
      <view class="wx-plan-btn">
        <button bindtap='_error'>取消</button>
        <button bindtap='_success' form-type="submit">确认</button>
      </view>
    </form>
  </view>
</view>