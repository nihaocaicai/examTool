<view hidden="{{flag}}">
  <view class='diary-container'>
    <view class="wx-diary-title">考研小日志</view>
    <form bindsubmit="formSubmit">
      <view class='wx-diary-container'>
        <!-- 标题 -->
        <view class="wx-diary-headline">
          <text>标题：</text>
          <input name="title" maxlength="14" type='text' placeholder="标题" />
        </view>
        <!-- 内容 -->
        <view class="wx-diary-con">
          <textarea name="content" maxlength="140" placeholder="说说你的想法吧..." minlength="{{min}}" maxlength="{{max}}" bindinput="inputs" >
          <text class="currentWordNumber">{{currentWordNumber|0}}/{{max}}</text>
          </textarea>
        </view>
      </view>
      <!-- 按钮 -->
      <view class="wx-diary-btn">
        <button bindtap='_error'>取消</button>
        <button bindtap='_success' form-type="submit">确认</button>
      </view>
    </form>
  </view>
</view>