<view hidden="{{flag}}">
  <view class='plan-container'>
    <!-- 标题 -->
    <view class="wx-plan-title">修改安排</view>
    <form bindsubmit="formSubmit">
      <!-- 内容地点 -->
      <view class="wx-plan-con">
        <!-- 内容 -->
        <view class="plan-content-container">
          <text>内容：</text>
          <input name="plan_content" placeholder="内容" />
        </view>
        <!-- 内容 -->
        <view class="plan-content-container">
          <text>地点：</text>
          <input name="plan_content" placeholder="地点" />
        </view>
        <!-- 开始时间 -->
        <!-- 开始日期选择 -->
        <view class="plan-content-container">
          <picker name='date' mode="date" value="{{date}}" bindchange="bindDateChange">
            <text>日期: {{date}}</text>
          </picker>
        </view>

        <!-- 开始当天时间选择 -->
        <view class="plan-content-container">
          <picker name='time' mode="time" value="{{time}}" bindchange="bindTimeChange">
            <text>时间: {{time}}</text>
          </picker>
        </view>
        <!-- 是否开启微信提示 -->
        <view class="plan-content-container">
          <text>微信提示：</text>
          <switch name='plan_if_prompt' bindchange="switchChange" />
        </view>
        <!-- 微信提示时间选择，默认当天的时间 -->
        <view>
          <!-- 当天时间选择 -->
          <view class="plan-content-container" hidden="{{hidden_time}}">
            <picker name='point_time' mode="time" value="{{time}}" bindchange="bindPointTimeChange">
              <text>提示时间: {{point_time}}</text>
            </picker>
          </view>
        </view>
      </view>

      <!-- 按钮 -->
      <view class="wx-plan-btn">
        <button bindtap='_error'>取消</button>
        <button bindtap='_success' form-type="submit">确认</button>
      </view>
    </form>
  </view>
</view>