<view hidden="{{flag}}">
  <view class='setting-container'>
    <!-- 标题 -->
    <view class="wx-setting-title">设置信息</view>
    <form bindsubmit="formSubmit">
      <!-- 内容 -->
      <view class="wx-setting-con">
        <view class="wx-edit">昵称：
          <text style='color:#04838e'>{{nickName}}</text>
        </view>
        <!-- 选择生日 -->
        <view class="section">
          <picker name="birthday" mode="date" value="{{birthday}}" bindchange="bindBirthdayChange">
            <view class="picker">
              生日：
              <text decode="true" style='color:#04838e'>{{birthday == null ? "点击选择日期" : birthday}}</text>
            </view>
          </picker>
          <text wx:if="{{birthday != null}}" bindtap='cleanBirthday' style='color:red; text-align:right;margin-left:15rpx'>删除</text>
        </view>
        <!-- 考研日期 -->
        <view class="section">
          <picker name="examDate" mode="date" value="{{examDate}}" bindchange="bindDateChange">
            <view class="picker">
              考研日期：
              <text decode="true" style='color:#04838e'>{{examDate == null ? "点击选择日期" : examDate}}</text>
            </view>
          </picker>
          <text wx:if="{{examDate != null}}" bindtap='cleanExamDate' style='color:red; text-align:right;margin-left:15rpx'>删除</text>
        </view>
        <view class="wx-edit">目标大学</view>
        <textarea name="goal_university" class="wx-txt" maxlength="10" placeholder='你心仪的大学' value="{{goal_university}}" />
        <view class="wx-edit">目标专业</view>
        <textarea name="goal_major" class="wx-txt" maxlength="10" placeholder='你心仪的专业' value="{{goal_major}}" />
        <view class="wx-edit">座右铭</view>
        <textarea name="motto" class="wx-txt2" maxlength="50" placeholder='激励你的名言' value="{{motto}}" />
        <view wx:if="{{isLogin}}" style="color: #999; text-align:center; font-size: 30rpx">没有想好可以稍后设置哦～</view>
      </view>
      <!-- 按钮 -->
      <view class="wx-setting-btn">
        <button wx:if="{{!isLogin}}" bindtap='_error'>取消</button>
        <button form-type="submit">确定</button>
      </view>
    </form>
  </view>
</view>