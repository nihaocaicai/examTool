<view>
  <!-- 头像star -->
  <view class='image-container'>
    <view>
      <image class='head-image' src='{{wxInfo.user_avatar}}' />
    </view>
    <image class='edit-image' src='/images/menu/setting/edit.png' bindtap='showEdit' />
  </view>
  <!-- 头像end -->

  <!-- 信息star -->
  <view class='text-container'>
    <text>昵称：{{wxInfo.user_name}}</text>
    <text>性别：{{wxInfo.user_gender}}</text>
    <text>生日：{{info.birthday == "" || info.birthday == null? "未设置": info.birthday}}</text>
    <text>考研日期：{{info.examDate == "" || info.examDate == null ? "未设置": info.examDate}}</text>
    <text>目标大学：{{info.goal_university == "" ? "未设置": info.goal_university}}</text>
    <text>目标专业：{{info.goal_major == "" ? "未设置": info.goal_major}}</text>
    <text>座右铭：{{info.motto  == "" ? "未设置座右铭": info.motto}}</text>
    <view style='display: flex; align-items: center;'>
      <text>离线模式时提示</text>
      <switch checked="{{!hideOfflineTips}}" bindchange='offlineTipsChange' color='#04838e' />
      <image bindtap='whatsOfflineMode' style="width:50rpx" src='/images/menu/question.png' mode="widthFix"/>
    </view>
  </view>
  <!-- 信息end -->

  <!-- 退出登录star -->
  <view class='button-container'>
    <button bindtap='clickLogoutButton'>退出登录</button>
  </view>
  <!-- 退出登录end -->

  <edit id='edit' bind:modify_success="modify_success" />

  <modal id="modal" hidden="{{!showDeleteModal}}" title="提示" confirm-text="退出" cancel-text="取消" bindcancel="cancelDelete" bindconfirm="confirmDelete">
    <view style='text-align:center'>退出登录后，所有信息都会被删除</view>
    <view style='text-align:center'>请填入正确答案以完成操作</view>
    <view style='margin-top:20rpx' />

    <view style='font-size:50rpx; display:flex; justify-content:center; align-items:center'>
      <text decode='true'>{{add1}} + {{add2}} = &nbsp;</text>
      <input value='{{value}}' style='width:50rpx' bindinput="bindKeyInput" type='text' placeholder="?" maxlength='1' focus="{{true}}" />
    </view>
  </modal>

</view>