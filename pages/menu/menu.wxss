page {
  margin: 0 auto;
  font-family: 'PingFang SC',
                 'Helvetica Neue',
                 Helvetica,
                 'Droid Sans Fallback',
                 'Microsoft Yahei',
                 sans-serif;
}

#infomation {
  margin: 20px;
  height: 180rpx;
  display: flex;
  flex-direction: row;
}

#infomation #picture_out {
  overflow: hidden;
  display: block;
  height: 180rpx;
  margin-left: 10px;
  margin-right: 10px;
}

#infomation #picture_out #picture {
  overflow: hidden;
  height: 180rpx;
  border-radius: 50%;
  /*边框阴影 box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);*/
  /*边框白色 border: 2px solid #fff;*/
}

#infomation #tips {
  overflow: hidden;
  width: 100%;
  height: 180rpx;
}

#infomation #tips #nickName {
  display: table-cell;
  vertical-align: bottom;
  height: 70rpx;
  word-wrap: break-word;
  font-weight: bold;
}

#infomation #tips #motto {
  display: flex;
  align-items: center;
  justify-content: left;
  height: 110rpx;
  font-size: 35rpx;
  word-wrap: break-word;
}

#settings{
  margin: 20px;
  justify-content: center;
  text-align: center;
}

#settings .wave{
  height: 8px;
}

#settings .item{
  font-size: 45rpx;
}

#bottom {
  font-size: 28rpx;
  color: black; /*#999;*/
  position: fixed;
  bottom: 25px;
  left: 0;
  right: 0;
  text-align: center;
}
